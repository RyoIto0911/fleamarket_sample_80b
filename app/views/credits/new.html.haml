.creditNewWrapper
  .Credit
    .Credit__logo
      = image_tag src="material/logo/logo.png", size: "150x50", class: "logo"
    .Credit__master
      .Credit__entry
        .Credit__title
          クレジットカード情報登録
        .Credit__formBox
          = form_tag(pay_credits_path,method: :post, id: 'card_token',  name: "inputForm") do
            .field
              %label カード番号
              %span 必須
              %br/
              .field__Input
                = text_field_tag "number", "", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"

            .field
              %label 有効期限
              %span 必須
              %br/
              .field__Input
                %select#exp_month{name: "exp_month", class: "field__Input__text", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %label-ym 月/
                %select#exp_year{name: "exp_year", class: "field__Input__text", type: "text"}
                  %option{value: ""} --
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                  %option{value: "2030"}30
                %label-ym 年
            .field
              %label セキュリティコード
              %span 必須
              .field__Input
                = text_field_tag "cvc", "", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .action
              = submit_tag "登録する", id: "token_submit"