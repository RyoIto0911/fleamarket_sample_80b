.wrapper
  .header 
  .border
  .postForm
    .postForm__title
      = image_tag src="material/logo/logo.png", size: "140x40", class: "item-new-logo"
    .postForm__main
      = form_with model: @item, local: true do |f|
        .postContents
          .postContent
            .selectTitle
              .selectTitle__info
                出品画像
              .selectTitle__required
                必須
            .selectImageUpload
              最大5枚までアップロードできます
              
            .post__drop__box__container
              .prev-content
              .label-content
                %label{for: "item_images_attributes_0_src", class: "label-box", id: "label-box--0"}
                  %pre.label-box__text-visible クリックしてファイルをアップロード
              .hidden-content
                = f.fields_for :images do |i|
                  = i.file_field :src, class: "hidden-field"
                  %input{class:"hidden-field", type: "file", name: "item[images_attributes][1][src]", id: "item_images_attributes_1_src" }
                  %input{class:"hidden-field", type: "file", name: "item[images_attributes][2][src]", id: "item_images_attributes_2_src" }
                  %input{class:"hidden-field", type: "file", name: "item[images_attributes][3][src]", id: "item_images_attributes_3_src" }
                  %input{class:"hidden-field", type: "file", name: "item[images_attributes][4][src]", id: "item_images_attributes_4_src" }
                
          .borders
          .postContent
            .selectNameIntro
              .selectNameIntro__name
                商品名
              .selectTitle__required
                必須
            = f.text_field :name, class: "inputName", placeholder: "40文字以内"
            .selectNameIntro
              .selectNameIntro__name
                商品の説明
              .selectTitle__required
                必須
            = f.text_area :introduction, class: "inputText", placeholder: "40文字以内"
            .oneThousand
              .oneThousand__one 0/1000
          .borders
          .postContent
            .selectShowTitle 商品の詳細
            .selectShow              
              .selectNameIntro__name
                カテゴリー
              .selectTitle__required
                必須
            = f.text_field :category_id, class: "inputName", placeholder: "選択してください"
            .selectShow              
              .selectNameIntro__name
                ブランド
              .selectTitle__optional
                任意
            = f.text_field :brand, class: "inputName", placeholder: "選択してください"
            .selectShow              
              .selectNameIntro__name
                商品の状態
              .selectTitle__required
                必須
            = f.text_field :condition, class: "inputName", placeholder: "選択してください"
          .borders
          .postContent
            .selectShowTitle 配送について
            .selectShow   
              .selectNameIntro__name
                配送料の負担
              .selectTitle__required
                必須
            = f.text_field :delivery_charge, class: "inputName", placeholder: "選択してください"
            .selectShow   
              .selectNameIntro__name
                配送元に地域
              .selectTitle__required
                必須
            = f.text_field :derivery_origin, class: "inputName", placeholder: "選択してください"
            .selectShow   
              .selectNameIntro__name
                配送までの日数
              .selectTitle__required
                必須
            = f.text_field :delivery_date, class: "inputName", placeholder: "選択してください"
          .borders
          .postContent
            .selectShowTitle 価格 (¥300~9,999,999)
            .selectPrices
              .selectShow   
                .selectNameIntro__name
                  販売価格
                .selectTitle__required
                  必須
              .selectPrice
                ¥
                = f.text_field :price, class: "inputPrice", placeholder: "0"
            .priceFee 
              .priceFee__title 販売手数料(10%)
              .priceFee__price ¥0
            .priceProfit
              .priceProfit__title 販売利益
              .priceProfit__price ¥0 
            .exhibition
              = f.submit "出品する", class: "exhibition-btn"
              = link_to "キャンセル", "#", class: "exhibition-cancel"            
    .postForm__footer
      .postFooterList
        = link_to "プライバシーポリス", "#", class: "postFooterList__list"
        = link_to "フリマ利用契約", "#", class: "postFooterList__list" 
        = link_to "特定商取引に関する表記", "#", class: "postFooterList__list"  
      .postFooterLogo
        =image_tag src="material/logo/logo-white.png", size: "140x40", class: "item-new-logo"
        .postFotterLogo__inc
          ©︎ FURIMA, Inc.
  .footer