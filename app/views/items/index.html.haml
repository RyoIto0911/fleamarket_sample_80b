  .main__new
    .main__new__title
      ピックアップカテゴリー
    .main__new__sub
      新規投稿商品
    .mainsNew
      - @items.each do |item|
        .mainNew
          .mainNew__contents
            - if !item.buyer_id.nil?
              .sold_triangle
                .sold_word
                  SOLD
            .item-content-pic
              =link_to item_path(item), method: :get do
                =image_tag item.item_images[0].image.url, class: "item-photos", size: "220x140"
            .mainNew-info
              .mainNew-name
                = item.name
              .mainNew-price
                = item.price.to_s(:delimited)
                円
              .mainNew-tax
                (税込)
  .main__ShowWindow
    .main__ShowWindow__Title
      新着おすすめカテゴリー
    .main__ShowWindow__subTitle
      家電・スマホ・カメラ新着アイテム
    .main__ShowWindow__RecommendIndexes
      .main__ShowWindow__RecommendIndexes__List
        - @recommend_items.each do |item|
          =link_to item_path(item), method: :get, id: "reccomendItems" do
            .Item
              - if !item.buyer_id.nil?
                .sold_triangle
                  .sold_word
                    SOLD
              .Item__pic
                =image_tag item.item_images[0].image.url, class: "item-photos", size: "130x130"
              .Item__info
                .Item__info__name
                  = item.name
                .Item__info__price
                  = item.price.to_s(:delimited)
                  円(税込)
