.subWrapper
  .Account
    .Account__logo
      = image_tag src="material/logo/logo.png", size: "150x50", class: "logo"
    .Account__master
      .Account__master__entry
        .Account__master__entry__accountDleteTitle
          %h2 アカウント削除
        .Account__master__entry__form
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .accountDeleteBtn
              #{button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してもいいですか?" }, method: :delete}
              .accountDeleteConfirm
                %i.fas.fa-exclamation-triangle
                アカウント削除は取り消すことができません
              = link_to "戻る", :back, class: "backBtn"